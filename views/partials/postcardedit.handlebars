<div class="card mb-3">
    <div class="card-header text-center px-2">
        <h2 class="text-dark">Edit post</h2>  
    </div>
    
    <div class="card-body">
        <form class="edit-post" data-id="{{this.id}}">
            <div class="form-group px-5 mb-5" data-id="{{this.id}}">
                <label for="post-content">Quotes</label>
                <textarea class="form-control text-start" name="post-content" id="post-content" cols="30" rows="10">
                {{this.content}}
                </textarea>
            </div>
            <div class="d-flex justify-content-evenly">
                <button class="btn btn-success btn-block px-5 py-3" type="submit">Update Quote</button>
                <button class="btn btn-danger btn-block px-5 py-3" data-id="{{this.id}}" id="btndelete">Delete post</button>
            </div>
        </form>
    </div>
</div>

<script src="./js/editpost.js"></script>