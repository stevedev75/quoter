<div class="card mb-3">
    <div class="card-header" id='mainPost' data-postId='{{this.id}}'>
        {{this.user.userName}} {{format_date this.date_created}}
    </div>

    <div class="card-body">
        <p class="card=text">
            {{this.content}}
        </p>
        {{#if isImg}}
        <img src="" alt="">
        {{/if}}
    </div>

    <div class="card-footer">
        <nav>
            <button class="fas fa-comment-alt"></button>

            {{#if liked}}
            <button class="fas fa-hand-spock"></button>
            {{else}}
            <button class="far fa-hand-spock"></button>
            {{/if}}

            <button class= ""> <span class="fas fa-angle-double-left"></span> <span class="fas fa-angle-double-right"></span></button>
        </nav>
    </div>
</div>